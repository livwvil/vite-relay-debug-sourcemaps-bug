{
  "extends": "./base.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    "baseUrl": ".",
    "rootDir": ".",
    "sourceMap": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "react-jsx",
    "lib": ["webworker","dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["vite-plugin-svgr/client"]
  },
  "include": ["src", "@types"],
  "compileOnSave": false
}
